{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug TempMe on MSRVTT (Single GPU)",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/main.py",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "args": [
          "--do_eval", "1",
          "--workers", "8",
          "--batch_size", "16",
          "--n_display", "5",
          "--batch_size_val", "16",
          "--anno_path", "/home/wa24301158/dataset/MSRVTT",
          "--epochs", "1",
          "--video_path", "/home/wa24301158/dataset/MSRVTT/all_compressed",
          "--datatype", "msrvtt",
          "--output_dir", "log/MSRVTT_custom_debug",
          "--pretrained_path", "/home/wa24301158/mywork/TempMe-master/tvr/models",
          "--init_model","log/MSRVTT_custom/best.pth"
        ],
        "env": {
          // 强制使用单卡
          "CUDA_VISIBLE_DEVICES": "3",
          // --- 新增的环境变量，用于修复 RANK 错误 ---
          "MASTER_ADDR": "localhost",
          "MASTER_PORT": "29500", // 任意未被占用的端口
          "RANK": "0",
          "WORLD_SIZE": "1"
        },
        // 重要：请将下面的路径修改为您项目所用的 Conda 环境中的 Python 解释器路径
        "python": "/home/wa24301158/conda_envs/temp/bin/python"
      }
    ]
  }